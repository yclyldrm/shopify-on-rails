<%= form_tag(gift_product_path(product), method: :post, remote: true) do %>
  <%= select_tag :variant_id, options_for_select(product.variants.collect { |variant| [variant.name, variant.id] }) %>
  <%= submit_tag('Send Gift') %></br>
  <%= label_tag(:email,"Email") %>
  <%= text_field_tag(:email) %>
<% end %>